<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Mongoose Flights</title>
</head>
<body>
  <nav>
    <a href="/">Home</a>
    <a href="/flights/new">New Flight</a>
    <a href="/flights">All Flights</a>
  </nav>
  <h1>Flight List</h1>
  <table class="center">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>FlightNo</th>
        <th>Departs Date</th>
        <th>Departs Time</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(f){ %>  
      <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs.toLocaleDateString() %></td>
          <td><%= f.departs.toLocaleTimeString() %></td>
          <td><a href="/flights/<%= f._id %>">Details</a></td>
        </tr>
    <% });%>
    </tbody>
  </table>

</body>
</html>